<h1>Jetzt Anmelden</h1>
<div class="row">
 <div class="col-md-6 col-md-offset-3">
   <%= form_for(@user, url: signup_path) do |f| %>
     <%= render 'shared/error_messages' %>

     <%= f.label :first_name, "Vorname" %>
     <%= f.text_field :first_name, class: 'form-control' %>

     <%= f.label :name, "Nachname" %>
     <%= f.text_field :name, class: 'form-control' %>

     <%= f.label :email, "E-Mail Adresse" %>
     <%= f.email_field :email, class: 'form-control' %>

     <%= f.label :password, "Passwort" %>
     <%= f.password_field :password, class: 'form-control' %>

     <%= f.label :password_confirmation, "Passwort Wiederholen" %>
     <%= f.password_field :password_confirmation, class: 'form-control' %>

     <%= f.submit "Jetzt anmelden", class: "btn btn-info" %>
   <% end %>
 </div>
</div>
