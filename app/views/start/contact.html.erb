<% provide(:title, "Kontakt") %>
<h1>Kontakt</h1>
<div class="container">
	<div class="row-fluid">
        <div class="span8">
        	<iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.de/maps?hl=de&q=Bruderm%C3%BChlstr.,%20M%C3%BCnchen&t=&z=12&ie=UTF8&iwloc=B&output=embed"></iframe>
    	</div>

      	<div class="span4">
    		<address>
    			<strong>Kreatives Chaos</strong><br>
    			Brudermühlstr. 5<br>
    			München<br>
    			Deutschland<br>
    		</address>
    	</div>
    </div>
</div>
<div class="container center">
  <div class="col-md-15">
      <div class="form-area">
          <form role="form">
          <br style="clear:both">
                      <h3 style="margin-bottom: 25px; text-align: center;">Kontaktformular</h3>
      				<div class="form-group">
  						<input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
  					</div>
  					<div class="form-group">
  						<input type="text" class="form-control" id="email" name="email" placeholder="Email" required>
  					</div>
  					<div class="form-group">
  						<input type="text" class="form-control" id="subject" name="subject" placeholder="Thema" required>
  					</div>
                      <div class="form-group">
                      <textarea class="form-control" type="textarea" id="message" placeholder="Nachricht" maxlength="140" rows="7"></textarea>
                          <span class="help-block"><p id="characterLeft" class="help-block ">Maximale Zeichen erreicht</p></span>
                      </div>
          <button type="button" id="submit" name="submit" class="btn btn-primary pull-right">Absenden</button>
          </form>
      </div>
  </div>
</div>
